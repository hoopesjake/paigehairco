<script>
    let currentMonth = 10; // November (0-indexed for Date)
    let currentYear = 2024;
    let selectedDay = null;
    let selectedTime = null; // Track selected time
    const calendar = document.querySelector('.calendar');
    const timeSlotContainer = document.querySelector('.time-slot');
    const selectedDateDisplay = document.getElementById('selected-date'); // To show selected date
    const bookButton = document.getElementById('book-appointment'); // Book Appointment button
    
    const calendarMonth = document.getElementById('calendar-month'); // To display the month and year

    // Function to show or hide the "Book Appointment" button based on selections
    function checkAppointmentReady() {
        if (selectedDay !== null && selectedTime !== null) {
            bookButton.style.display = 'block'; // Show button
        } else {
            bookButton.style.display = 'none'; // Hide button
        }
    }

    function generateCalendar(month, year) {
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        const firstDay = new Date(year, month, 1).getDay();

        // Set the calendar month and year
        calendarMonth.innerText = `${new Date(year, month).toLocaleString('default', { month: 'long' })} ${year}`;

        calendar.innerHTML = `
            <div class="calendar-day">Sun</div>
            <div class="calendar-day">Mon</div>
            <div class="calendar-day">Tue</div>
            <div class="calendar-day">Wed</div>
            <div class="calendar-day">Thu</div>
            <div class="calendar-day">Fri</div>
            <div class="calendar-day">Sat</div>
        `;

        // Empty cells for the days before the first day of the month
        for (let i = 0; i < firstDay; i++) {
            calendar.innerHTML += `<div></div>`;
        }

        // Loop through the days of the month
        for (let i = 1; i <= daysInMonth; i++) {
            const dayOfWeek = (firstDay + i - 1) % 7; // Determine the day of the week (0-Sun, 1-Mon, ...)
            const button = document.createElement('button');
            button.innerText = i;

            // Always apply this style for unavailable days
            if (dayOfWeek === 0 || dayOfWeek === 2 || dayOfWeek === 4 || dayOfWeek === 5) {
                button.disabled = true;
                button.style.backgroundColor = '#FFFFFF'; // White for unavailable days
                button.style.color = '#D3D3D3'; // Greyed out text for unavailable days
                button.title = 'Unavailable. Try another day.';
            }

            // Highlight available days (Mon, Wed, Sat)
            if (dayOfWeek === 1 || dayOfWeek === 3 || dayOfWeek === 6) {
                button.style.backgroundColor = '#F0E1E1'; // Light color for available days
                button.style.color = '#5C3D3D';
                button.onclick = () => {
                    // Remove the 'selected' class from all buttons
                    

                    // If a day was previously selected, reset its background color
                    if (selectedDay !== null) {
                        const previousSelectedButton = document.querySelector(`button:nth-child(${selectedDay - firstDay})`);
                        if (previousSelectedButton) {
                            previousSelectedButton.style.backgroundColor = '#F0E1E1'; // Reset previous selected day
                        }
                    }
                    // Highlight the selected button with a darker shade
                    button.style.backgroundColor = '#D8A8A8'; // Darker shade for selected day
                    selectedDay = i;

                    // Display the selected date above the time selection
                    selectedDateDisplay.innerHTML = `Selected Date: ${currentMonth + 1}/${i}/${currentYear}`;

                    // Check if both date and time are selected to display the button
                    checkAppointmentReady();
                };
            }

            calendar.appendChild(button);
        }
    }

    // Event listener for time selection
    const timeSelect = document.getElementById('time');
    timeSelect.addEventListener('change', function() {
        selectedTime = timeSelect.value;

        // Display the selected time above the time selection
        checkAppointmentReady();
    });

    // Function to go to the previous month
    function prevMonth() {
        currentMonth--;
        if (currentMonth < 0) {
            currentMonth = 11;
            currentYear--;
        }
        generateCalendar(currentMonth, currentYear);
    }

    // Function to go to the next month
    function nextMonth() {
        currentMonth++;
        if (currentMonth > 11) {
            currentMonth = 0;
            currentYear++;
        }
        generateCalendar(currentMonth, currentYear);
    }

    // Initialize the calendar with the current month
    generateCalendar(currentMonth, currentYear);

</script>

    
    
    
    
    
    
    
    
