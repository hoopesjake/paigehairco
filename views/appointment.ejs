<!DOCTYPE html>
<html lang="en">

<head>
    <title>Paige Hair Co. - Bookings</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="/square.ico">
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #d4a5a5;
            --secondary-color: #f0e1e1;
            --text-color: #5c3d3d;
            --highlight-color: #f7c7c7;
        }

        * {
            font-family: 'Work Sans', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: var(--secondary-color);
            color: var(--text-color);
        }

        .header {
            text-align: center;
            background-color: var(--primary-color);
            padding: 20px;
        }
        .header a {
            color: #ffffff;
            text-decoration: none;
            margin: 0 15px;
            font-size: 1.2em;
        }
        .header a:hover {
            color: var(--highlight-color);
            text-decoration: underline;
        }
        .header h1 {
            color: #ffffff;
            font-size: 2.5em;
            margin-bottom: 10px;
            font-weight: 500;
            font-weight: bold;
        }

        .table-container {
            padding: 40px;
            text-align: center;
        }

        table {
            margin: 0 auto;
            border-collapse: collapse;
            width: 80%;
            background-color: #ffffff;
            border: 1px solid #ddd;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: var(--primary-color);
            color: white;
        }

        tr:nth-child(even) {
            background-color: var(--secondary-color);
        }

        tr:hover {
            background-color: var(--highlight-color);
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>Paige Hair Co.</h1>
        <a href="/">Home</a>
        <a href="/services">Services</a>
        <h2>Admin Login Page</h2>
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                <!-- Rows will be dynamically added here -->
            </tbody>
        </table>
    </div>
    <script>
        // This script handles receiving and appending data dynamically
        // Assuming data is sent via localStorage from the booking page
        document.addEventListener("DOMContentLoaded", () => {
            const tableBody = document.querySelector("tbody");
            const bookings = JSON.parse(localStorage.getItem("bookings")) || [];
            
            bookings.forEach(booking => {
                const row = document.createElement("tr");
                Object.values(booking).forEach(value => {
                    const cell = document.createElement("td");
                    cell.textContent = value;
                    row.appendChild(cell);
                });
                tableBody.appendChild(row);
            });
        });
    </script>
</body>

</html>